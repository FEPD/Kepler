          <text style='margin-left:10rpx;color:#848484' class='font_24'>{{activitySubhead}}</text>
        </view>
        <view style='height:10rpx'></view>
      </view>
        
        

</template> 

<!--买家秀 buyerShow  -->
<template name="buyerShow">
    <view style='flex-wrap: wrap;background-color: #fff;' class='flex-row'>
      <view  wx:if="{{index<6}}" wx:for="{{images || []}}" wx:key="images+{{index}}">
        <image data-currentURL="{{item.imgUrl}}" data-list="{{images}}" bindtap='bigPicPreview' mode='aspectFill' class='d_img' style="position:relative;margin-top:20rpx;margin-left:{{index%3?10:20}}rpx;width: 230rpx;height: 230rpx;" src="{{item.imgUrl}}">
        </image>
      </view>
    </view>
</template> 

<!--商品  -->

 <template name="skulist">
    <view style='flex-wrap: wrap;background-color: #fff;' class='flex-row'>
      <view wx:if="{{products.length===1}}" wx:for="{{products || []}}" wx:key="products+{{index}}">
        <view data-activityType="{{activityType}}" bindtap='clickSku' data-wareid="{{item.wareId}}" style='margin-top:20rpx' class='flex-row'>
          <image class='d_img' style='margin-left:20rpx;position:relative;width: 228rpx;height: 228rpx;' src="{{products[0].imgPath}}">
            <view style='position:absolute;top:0;left:0;background-color:rgba(0,0,0,0.1);width:228rpx;height:228rpx'></view>
            <block wx:if="{{item.isUnderCarriage === 1 || item.stock === 0}}">
              <image style='position:absolute;top:0;left:0;width:128rpx;height:128rpx;margin-left:50rpx;margin-top:50rpx;' src="{{item.isUnderCarriage === 1 ?'http://njst.360buyimg.com/jdreact/program/shop_mark_off_shelf.png':'http://njst.360buyimg.com/jdreact/program/shop_mark_sold_out.png'}}" />
            </block>
          </image>
          <view style='margin-left:40rpx;margin-top:10rpx;flex:1;height:228rpx;'>
            <text class='secKillText'>{{item.wareName}}</text>
            <view style='height:80rpx'></view>
            <text wx:if="{{item.jdPrice}}" style='' class='font_38'>￥ {{item.jdPrice}}</text>
            <text wx:else style='' class='font_38'>暂无报价</text>
          </view>
        </view>
      </view>
      <view wx:if="{{index<6 && products.length >1}}" wx:for="{{products || []}}" wx:key="products+{{index}}">
        <image class='d_img' data-activityType="{{activityType}}" bindtap='clickSku' data-wareid="{{item.wareId}}" style="position:relative;margin-top:20rpx;margin-left:{{index%3?10:20}}rpx;width: 230rpx;height: 230rpx;" src="{{item.imgPath}}">
        <view style='position:absolute;top:0;left:0;background-color:rgba(0,0,0,0.1);width:230rpx;height:230rpx'></view>
        <view style='display: flex;align-items: center;justify-content: center;position:absolute;bottom:0;left:0;width:230rpx;height:40rpx;margin-bottom:16rpx;'>
          <text class='font_30' style='font-weight: bold;padding-top:8rpx;padding-bottom:8rpx;padding-left:20rpx;padding-right:20rpx;border-radius:40rpx;background-color:rgba(255,255,255,0.5);'>￥{{item.jdPrice}}</text>
        </view>
         <block wx:if="{{item.isUnderCarriage === 1 || item.stock === 0}}">
              <image style='position:absolute;top:0;left:0;width:130rpx;height:130rpx;margin-left:50rpx;margin-top:50rpx;' src="{{item.isUnderCarriage === 1 ?'http://njst.360buyimg.com/jdreact/program/shop_mark_off_shelf.png':'http://njst.360buyimg.com/jdreact/program/shop_mark_sold_out.png'}}" />
            </block>
        </image>
      </view>
    </view>
</template> 

<!--看过的人数，评论数，点赞数  -->
<template name="bottom">
<view style='margin-left:20rpx;margin-top:30rpx;margin-bottom:20rpx' class='flex-row'>
  <view class='flex-between'>
    <view class='flex-row'>
      <image class='d_img' style='width: 34rpx;height: 34rpx;' src='http://njst.360buyimg.com/jdreact/program/shop_dynamic_icon_show.png'/>
      <text class='font_24' style='color:#686868;margin-left:10rpx'>{{viewCounts}}人看过</text>
    </view>
    <view class='flex-row' style='margin-right:20rpx'>
      <image class='d_img' style='width: 34rpx;height: 34rpx;' src='http://njst.360buyimg.com/jdreact/program/shop_dynamic_icon_words.png'/>
      <text class='font_24' style='color:#686868;margin-left:20rpx'>{{(commentCount&&commentCount !== 0) ? commentCount : '评论'}}</text>
      <image class='d_img' style='width: 34rpx;height: 34rpx;margin-left:60rpx' src='http://njst.360buyimg.com/jdreact/program/shop_dynamic_icon_good.png'/>
       <text class='font_24' style='color:#686868;margin-left:20rpx'>{{(praiseCount&&praiseCount !== 0) ? praiseCount : '赞'}}</text> 
    </view>
  </view>  
</view>
</template>
