<template name="subjectUrl">
<view bindtap="subjectUrl" data-murl="{{murl}}" style='display:flex;width:750rpx;align-items: center;justify-content: flex-start;'>
  <image class='d_img' mode='widthFix' style='margin-left:20rpx;width:710rpx;' src="{{subjectUrl}}"></image>
</view>
</template>


<template name="shopActivity">
<view style='background-color: #ffffff;'>
  <block wx:if="{{item.activityType===3 || item.activityType===4 || item.activityType===12}}" wx:for="{{activity || []}}" wx:key="activity+{{index}}">
    <template is = 'modified' data = "{{...item}}" />
    <template wx:if="{{item.activityType===3}}" is = 'activityDesc' data = "{{...item}}" />
    <template wx:if="{{item.activityType===4}}" is = 'seckill' data = "{{...item}}" />
    <template wx:if="{{item.activityType===12}}" is = 'presale' data = "{{...item}}" />
    <template is = 'bottom' data = "{{...item}}" />
    <view style='background-color: #f8f8f8;height:40rpx'/>
  </block>
</view>
  
</template>

<!--预售  -->
<template name="presale">
  <view style='margin-left:20rpx;margin-right:20rpx;margin-top:30rpx;margin-bottom:20rpx' class='flex-column'>
    <view style='' class='flex-row'>
      <image class='d_img' style='width: 90rpx;height: 40rpx;' src="{{activityTypeTabImg}}"/>
      <text style='margin-left:20rpx' class='font_28'>{{activityDesc}}</text>
    </view>
    <block wx:if="{{products&&products.length===1}}">
    <view style='margin-top:20rpx' class='flex-row'>
      <image class='d_img' style='width: 228rpx;height: 228rpx;' src="{{products[0].imgPath}}"/>
      <view style='margin-left:20rpx;flex:1;height:228rpx;'>
        <text class='secKillText'>{{products[0].wareName}}</text>
        <view style='height:40rpx'></view>
        <text style='' class='font_38'>￥ {{products[0].jdPrice}}</text>
      </view>
    </view>
    </block>
    <block wx:else>
    <view style='flex-wrap: wrap;background-color: #fff;' class='flex-row'>
      <block wx:if="{{index<6}}" wx:for="{{products || []}}" wx:key="products+{{index}}">
        <image class='d_img' style="margin-top:20rpx;margin-left:{{index%3?20:0}}rpx;width: 220rpx;height: 220rpx;" src="{{item.imgPath}}"/>
      </block>
    </view>
    </block>
  </view>
</template>

<!--秒杀  -->
<template name="seckill">
  <view style='margin-left:20rpx;margin-right:20rpx;margin-top:30rpx;margin-bottom:20rpx' class='flex-column'>
    <view style='' class='flex-row'>
      <image class='d_img' style='width: 90rpx;height: 40rpx;' src="{{activityTypeTabImg}}"/>
      <text style='margin-left:20rpx' class='font_28'>距结束还差</text>
      <text style='margin-left:5rpx;padding-left:4rpx;padding-right:4rpx;background-color: #000;border-radius: 4rpx;color:#fff' class='font_26'>{{hour}}</text>
      <text style='margin-left:5rpx;' class='font_28'>时</text>
      <text style='margin-left:5rpx;padding-left:4rpx;padding-right:4rpx;background-color: #000;border-radius: 4rpx;color:#fff' class='font_26'>{{min}}</text>
      <text style='margin-left:5rpx;' class='font_28'>分</text>
    </view>
    <block wx:if="{{products&&products.length===1}}">
    <view style='margin-top:20rpx' class='flex-row'>
      <image class='d_img' style='width: 228rpx;height: 228rpx;' src="{{products[0].imgPath}}"/>
      <view style='margin-left:20rpx;flex:1;height:228rpx;'>
        <text class='secKillText'>{{products[0].wareName}}</text>
        <view style='height:40rpx'></view>
        <text style='' class='font_38'>￥ {{products[0].jdPrice}}</text>
      </view>
    </view>
    </block>
    <block wx:else>
    <view style='flex-wrap: wrap;background-color: #fff;' class='flex-row'>
      <block wx:if="{{index<6}}" wx:for="{{products || []}}" wx:key="products+{{index}}">
        <image class='d_img' style="margin-top:20rpx;margin-left:{{index%3?20:0}}rpx;width: 220rpx;height: 220rpx;" src="{{item.imgPath}}"/>
      </block>
    </view>
    </block>
  </view>
</template>



<!--专题 描述  -->
<template name="activityDesc">
<view style='margin-left:20rpx;margin-top:30rpx;margin-bottom:20rpx' class='flex-column'>
  <view class='flex-row'>
    <text wx:if="{{activityTab}}" style='margin-bottom:0rpx;color:#5274b1' class='font_28'>#{{activityTab}}#</text>
    <text style='margin-bottom:0rpx' class='font_28'>{{activityDesc}}</text>
  </view>
  <view wx:if="{{activitySubhead}}" class='flex-row'>
    <view style='margin-bottom:0rpx;width:4rpx;height:25rpx;background-color: #787878;' />
    <text style='margin-left:10rpx;margin-bottom:0rpx' class='font_28'>{{activitySubhead}}</text>
  </view>
  
  <image class='d_img' mode='aspectFit' style='margin-top:20rpx;width: 710rpx;height: 280rpx;' src="{{subjectUrl}}"/> 
  <!-- <image class='d_img' mode='aspectFit' wx:elif="{{activitySubType === 1}}" style='width: 470rpx;height: 270rpx;' src="{{subjectUrl}}"/> -->
</view>
</template>


<!--发布时间  -->
<template name="modified">
<view style='margin-left:20rpx;margin-top:30rpx;margin-bottom:20rpx' class='flex-row'>
  <image class='d_img' style='width: 34rpx;height: 34rpx;' src='http://njst.360buyimg.com/jdreact/program/shop_dynamic_icon_time.png'/>
  <text style='margin-left:10rpx' class='font_30'>{{modified}}</text>
</view>
</template>

 <template name="activityTypeTab">

      <view class='flex-column'>
         <view class='flex-row' style='align-items: center;justify-content:flex-start'>
            <view style='width:20rpx'></view>
            <image mode='aspectFit' class='' wx:if="{{activityTypeTabImg}}" style='margin-right:20rpx;width: 100rpx;height: 38rpx;' src="{{activityTypeTabImg}}"/>
            <text wx:if="{{activityTab}}" style='color:#5274b1' class='font_28'>#{{activityTab}}#</text>
            <text style='margin-bottom:0rpx' class='font_28'>{{activityDesc}}</text>
