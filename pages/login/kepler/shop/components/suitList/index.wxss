/* 套装促销 */

.suitListItem {
  display: flex;
  width: 750rpx;
  justify-content: center;
  align-items: center;
  flex-direction: row;
}

.suitItemImg {
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx;
  /* background: yellow; */
  border-radius: 4rpx;
  background-image: url('http://njst.360buyimg.com/jdreact/program/shop_goods_img_default.png');
  background-repeat: no-repeat;
  background-size: 100%;
}

.suitArrowImg {
  width: 38rpx;
  height: 38rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.suitSpaceBetween {
  width: 750rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.suitCar {
  display: flex;
  width: 750rpx;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  margin: 20rpx;
  background: #f23030;
  border-radius: 4rpx;
  padding: 10rpx;
}

.suitTips {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #FDF9D7;
  color: #686868;
  margin-bottom: 10rpx;
  font-size: 26rpx;
  padding: 20rpx;
  position: relative;

}

.tipText {

  font-size:26rpx;
  color: #E1772E;
  margin-right: 80rpx;

}

.tipText-clamp {
  font-size:26rpx;
  color: #E1772E;
  display: -webkit-box;
  overflow: hidden; 
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  background-color: rgba(0,0,0,0);
  word-break: break-all;
  flex: 1;
  margin-right: 60rpx;
}

.normal {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 30rpx;
  right: 40rpx;
}
.tips-wrap {
  width:670rpx;display:flex;display: -webkit-flex;flex-direction: column;-webkit-flex-direction: column;overflow:hidden
}
.s-suitTips {width: 710rpx; box-sizing: border-box;margin-bottom: 0;}
