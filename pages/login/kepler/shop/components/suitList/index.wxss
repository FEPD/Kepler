.itemBody {
  display: flex;
  flex-direction: column;
  width: 345rpx;
  border: 1px solid #e0e0e0;
  overflow: hidden;
}

.itemImg {
  width: 345rpx;
  height: 345rpx;
}

.itemText {
  height: 76rpx;
  font-size:28rpx;
  line-height: 38rpx;
  color: #666666;
  margin-top: 10rpx;
  margin-bottom: 0rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: -webkit-box;
  overflow: hidden; 
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
   /* background-color: blue;  */
  word-break: break-all;
}

.itemPromotionBody {
  display: flex;
  align-items: center;
  /* justify-content: center; */
  flex-direction: row;
  margin-top: 10rpx;
  margin-bottom: 0rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  /* background: purple; */
}

.itemPromotion {
  background-color: #f23030;
  font-size:26rpx;
  color: #ffffff;
  padding-top: 1rpx;
  padding-bottom: 1rpx;
  padding-left: 8rpx;
  padding-right: 8rpx;
  border-radius: 4rpx;
}

.itemPromotionText {
  font-size:26rpx;
  color: #999999;
  margin-top: 0rpx;
  margin-bottom: 0rpx;
  margin-left: 10rpx;
  margin-right: 0rpx;
  display: -webkit-box;
  overflow: hidden; 
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  background-color: #ffffff;
  word-break: break-all;
  flex: 1;
}

.itemPrice {
  margin-top: 0rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  /* background-color: orange; */
}

.itemPrice_big {
  font-size: 36rpx;
}

.itemPrice_small {
  font-size: 26rpx;
}

.itemPrice_red {
  color:#f23030; 
}

.itemPrice_gray {
  color:#81838e; 
}

