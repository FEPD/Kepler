}

.promListBottom {
  width: 750rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  background: #f8f8f8;
  color:#848689;
  /* border-top: 1px solid #e0e0e0; */
